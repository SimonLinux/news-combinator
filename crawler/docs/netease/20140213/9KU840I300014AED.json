u7684\u6293\u6355\u73b0\u573a\u3002\u56fe\u4e3a\u56fd\u5b89\u9152\u5e97\u5185\u7684\u6293\u6355\u73b0\u573a\u3002\u56fe\u4e3a\u6d89\u9ec4\u9152\u5e97\u3002\u5728\u56fd\u5b89\u9152\u5e97\uff0c\u4e00\u5bf9\u6d89\u9ec4\u4eba\u5458\u88ab\u5e26\u8d70\u8c03\u67e5\u3002 \u56fe\u4e3a\u56fd\u5b89\u9152\u5e97\u5185\u7684\u6293\u6355\u73b0\u573a\u3002\u56fe\u4e3a\u56fd\u5b89\u9152\u5e97\u5185\u7684\u6293\u6355\u73b0\u573a\u3002\u56fe\u4e3a\u6293\u6355\u73b0\u573a\u3002\u56fe\u4e3a\u88ab\u67e5\u5c01\u7684\u6d89\u9ec4\u9152\u5e97\u3002\u56fe\u4e3a\u592e\u89c6\u8bb0\u8005\u6697\u8bbf\u753b\u9762\u622a\u5c4f\u3002\u56fe\u4e3a\u592e\u89c6\u8bb0\u8005\u6697\u8bbf\u753b\u9762\u622a\u5c4f\u3002\u56fe\u4e3a\u592e\u89c6\u8bb0\u8005\u6697\u8bbf\u753b\u9762\u622a\u5c4f\u3002\u56fe\u4e3a\u592e\u89c6\u8bb0\u8005\u6697\u8bbf\u753b\u9762\u622a\u5c4f\u3002\u56fe\u4e3a\u592e\u89c6\u8bb0\u8005\u6697\u8bbf\u753b\u9762\u622a\u5c4f\u3002\u56fe\u4e3a\u592e\u89c6\u8bb0\u8005\u6697\u8bbf\u753b\u9762\u622a\u5c4f\u3002\u56fe\u4e3a\u592e\u89c6\u8bb0\u8005\u6697\u8bbf\u753b\u9762\u622a\u5c4f\u3002\u56fe\u4e3a\u592e\u89c6\u8bb0\u8005\u6697\u8bbf\u753b\u9762\u622a\u5c4f\u3002\u56fe\u4e3a\u592e\u89c6\u8bb0\u8005\u6697\u8bbf\u753b\u9762\u622a\u5c4f\u3002\u56fe\u4e3a\u592e\u89c6\u8bb0\u8005\u6697\u8bbf\u753b\u9762\u622a\u5c4f\u3002\u56fe\u4e3a\u592e\u89c6\u8bb0\u8005\u6697\u8bbf\u753b\u9762\u622a\u5c4f\u3002\u56fe\u4e3a\u592e\u89c6\u8bb0\u8005\u6697\u8bbf\u753b\u9762\u622a\u5c4f\u3002\u56fe\u4e3a\u592e\u89c6\u8bb0\u8005\u6697\u8bbf\u753b\u9762\u622a\u5c4f\u3002\u56fe\u4e3a\u592e\u89c6\u8bb0\u8005\u6697\u8bbf\u753b\u9762\u622a\u5c4f\u3002\u4e1c\u839e\u5e02\u7eaa\u59d412\u65e5\u4e0a\u5348\u53d1\u51fa\u7d27\u6025\u901a\u77e5\uff0c\u5f3a\u8c03\u56db\u9879\u7eaa\u5f8b\u8981\u6c42\uff0c\u89c4\u5b9a\u51e1\u662f\u67e5\u5904\u4e0d\u529b\uff0c\u518d\u88ab\u4e3e\u62a5\u4ecd\u6709\u6d89\u9ec4\u6d3b\u52a8\u5e76\u67e5\u5b9e\u7684\uff0c\u5c5e\u5730\u9547\uff08\u8857\u9053\uff09\u515a\u59d4\u4e66\u8bb0\u3001\u516c\u5b89\u5206\u5c40\u957f\u3001\u6d3e\u51fa\u6240\u957f\u3001\u6751\uff08\u793e\u533a\uff09\u4e66\u8bb0\u4e00\u5f8b\u5148\u514d\u804c\u518d\u6309\u89c4\u5b9a\u4ece\u4e25\u5904\u7406\u3002\u51e1\u662f\u67e5\u5904\u4e0d\u529b\uff0c\u518d\u88ab\u4e3e\u62a5\u4ecd\u6709\u6d89\u9ec4\u6d3b\u52a8\u5e76\u67e5\u5b9e\u7684\uff0c\u5c5e\u5730\u9547(\u8857\u9053)\u515a\u59d4\u4e66\u8bb0\u3001\u516c\u5b89\u5206\u5c40\u957f\u3001\u6d3e\u51fa\u6240\u957f\u3001\u6751(\u793e\u533a)\u4e66\u8bb0\u4e00\u5f8b\u5148\u514d\u804c\u518d\u6309\u89c4\u5b9a\u4ece\u4e25\u5904\u7406\u3002\u51e1\u515a\u5458\u5e72\u90e8\u53c2\u4e0e\u7ecf\u8425\u6d89\u9ec4\u573a\u6240\u3001\u5145\u5f53\u6d89\u9ec4\u573a\u6240\u201c\u4fdd\u62a4\u4f1e\u201d\u7684\uff0c\u4e00\u5f8b\u5148\u514d\u804c\u518d\u6309\u89c4\u5b9a\u4ece\u4e25\u5904\u7406\u3002\u4e3b\u8981\u72af\u7f6a\u5acc\u7591\u4eba\u4e0d\u6293\u83b7\u4e0d\u653e\u8fc7\uff0c\u4e0a\u4e0b\u6e38\u4e0d\u67e5\u6e05\u3001\u201c\u5229\u76ca\u94fe\u201d\u4e0d\u6253\u6389\u4e0d\u653e\u8fc7\uff0c\u201c\u4fdd\u62a4\u4f1e\u201d\u4e0d\u6316\u51fa\u4e0d\u653e\u8fc7\u3002\u8fd9\u56db\u9879\u5907\u53d7\u5173\u6ce8\u7684\u7eaa\u5f8b\u4e2d\u88ab\u6446\u5728\u7b2c\u4e00\u6761\u4f4d\u7f6e\u7684\u662f\u5b9e\u884c\u201c\u4e24\u4e2a\u4e00\u5f8b\u201d\u3002\u5728\u4e25\u660e\u5de5\u4f5c\u7eaa\u5f8b\u65b9\u9762\uff0c\u4e1c\u839e\u5e02\u660e\u786e\u8981\u91c7\u53d6\u8d85\u5e38\u89c4\u63aa\u65bd\u5411\u201c\u9ec4\u6d41\u201d\u5ba3\u6218\uff0c\u7cbe\u5bc6\u7ec4\u7ec7\uff0c\u5c06\u8d23\u4efb\u660e\u786e\u5230\u5c97\u3001\u5230\u4eba\uff0c\u624e\u5b9e\u63a8\u8fdb\u3002\u51e1\u5728\u626b\u9ec4\u5de5\u4f5c\u4e2d\u5931\u804c\u3001\u6e0e\u804c\u7684\uff0c\u51e1\u662f\u5750\u89c6\u4e0d\u7406\u3001\u63a8\u800c\u4e0d\u52a8\u7684\uff0c\u51e1\u662f\u63a8\u8bff\u626f\u76ae\u3001\u6548\u7387\u4f4e\u4e0b\uff0c\u5ef6\u8bef\u626b\u9ec4\u6574\u6cbb\u5de5\u4f5c\u7684\uff0c\u90fd\u8981\u8ffd\u7a76\u8d23\u4efb\u3002\u5728\u529e\u6848\u7eaa\u5f8b\u65b9\u9762\uff0c\u4e1c\u839e\u5e02\u63d0\u51fa\u505a\u5230\u201c\u4e09\u4e2a\u4e0d\u653e\u8fc7\u201d\u3002\u51e1\u53c2\u4e0e\u4e13\u9879\u6574\u6cbb\u7684\u5de5\u4f5c\u4eba\u5458\u4e25\u7981\u63a5\u53d7\u6d89\u6848\u4eba\u5458\u53ca\u5176\u4eb2\u5c5e\u7684\u5403\u8bf7\u548c\u8d22\u7269\uff0c\u5168\u529b\u56f4\u527f\u6d89\u9ec4\u8fdd\u6cd5\u72af\u7f6a\u95ee\u9898\u80cc\u540e\u7684\u5404\u7c7b\u4fdd\u62a4\u4f1e\u3001\u5173\u7cfb\u7f51\uff0c\u575a\u51b3\u65a9\u65ad\u6d89\u9ec4\u5229\u76ca\u94fe\uff0c\u4e0d\u6316\u51fa\u201c\u4fdd\u62a4\u4f1e\u201d\u4e0d\u6536\u5175\uff0c\u4e0d\u89c1\u6210\u6548\u4e0d\u6536\u5175\u3002\u51e1\u4e3a\u4e0d\u6cd5\u5206\u5b50\u901a\u98ce\u62a5\u4fe1\u3001\u63d0\u4f9b\u4fbf\u5229\u7684\uff0c\u4e00\u5f8b\u4e88\u4ee5\u4e25\u8083\u67e5\u5904\u3002\u4e1c\u839e\u8fd8\u4e25\u7981\u515a\u653f\u673a\u5173\u5de5\u4f5c\u4eba\u5458\u7279\u522b\u662f\u9886\u5bfc\u5e72\u90e8\u5145\u5f53\u201c\u4fdd\u62a4\u4f1e\u201d\uff0c\u4e3a\u6d89\u9ec4\u4eba\u5458\u8bf4\u60c5\u5f00\u8131\uff0c\u5305\u5e87\u3001\u7eb5\u5bb9\u6d89\u9ec4\u4eba\u5458\u6216\u4e3a\u6d89\u9ec4\u4eba\u5458\u63d0\u4f9b\u5e87\u62a4\u573a\u6240\uff0c\u4e3a\u4e13\u9879\u6574\u6cbb\u8bbe\u7f6e\u969c\u788d\u3002\u51e1\u6709\u6d89\u9ec4\u884c\u4e3a\u7684\uff0c\u4e00\u5f8b\u4ece\u4e25\u3001\u4ece\u91cd\u5904\u7406\u3002\u4e1c\u839e\u516c\u5b89\u90e8\u95e8\u76f8\u5173\u4eba\u58eb\u8bf4\uff0c\u6d89\u9ec4\u95ee\u9898\u5c61\u7981\u4e0d\u7edd\u201c\u662f\u56f0\u6270\u6211\u4eec\u7684\u4e00\u4e2a\u7a81\u51fa\u96be\u9898\u201d\uff0c2010\u5e74\u4ee5\u6765\uff0c\u5f53\u5730\u5e73\u5747\u6bcf\u5e74\u67e5\u5904\u7684\u5404\u7c7b\u6d89\u9ec4\u6848\u4ef6\u90fd\u4fdd\u6301\u5728\u5343\u5b97\u5de6\u53f3\u3002\u4e1c\u839e\u516c\u5b89\u90e8\u95e8\u8ba4\u4e3a\uff0c\u9020\u6210\u8fd9\u79cd\u95ee\u9898\u7684\u4e3b\u8981\u539f\u56e0\u5728\u4e8e\u6253\u51fb\u529b\u5ea6\u6b20\u7f3a\uff0c\u6ca1\u6709\u5f7b\u5e95\u65a9\u65ad\u5a31\u4e50\u670d\u52a1\u573a\u6240\u6d89\u9ec4\u6d3b\u52a8\u4e2d\u9152\u5e97\u7ecf\u8425\u8005\u3001\u627f\u5305\u8005\u3001\u7ba1\u7406\u4eba\u5458\u3001\u51fa\u79df\u4e1a\u4e3b\u53ca\u6d89\u9ec4\u4eba\u5458\u4e4b\u95f4\u5f62\u6210\u7684\u4e00\u6574\u6761\u201c\u5229\u76ca\u94fe\u201d\u3002\u5728\u76f8\u5f53\u90e8\u5206\u7fa4\u4f17\u770b\u6765\uff0c\u6d89\u9ec4\u95ee\u9898\u5c61\u7981\u4e0d\u7edd\u7684\u80cc\u540e\uff0c\u662f\u66f4\u5e94\u8be5\u5f97\u5230\u4ece\u91cd\u4ece\u5feb\u5904\u7406\u7684\u201c\u4fdd\u62a4\u4f1e\u201d\u95ee\u9898\u3002\u4e00\u540d\u4e1c\u839e\u51fa\u79df\u8f66\u53f8\u673a\u8bf4\uff0c\u5f88\u591a\u65f6\u5019\u4e00\u4e9b\u9152\u5e97\u91cc\u7684\u62db\u5ad6\u884c\u4e3a\u53ef\u4ee5\u7528\u660e\u76ee\u5f20\u80c6\u6765\u5f62\u5bb9\uff0c\u201c\u4e0d\u76f8\u4fe1\u804c\u80fd\u90e8\u95e8\u4e00\u65e0\u6240\u77e5\uff0c\u80af\u5b9a\u662f\u6709\u5305\u5e87\u3001\u52fe\u7ed3\u3002\u201d\u9488\u5bf9\u4e1c\u839e\u201c\u626b\u9ec4\u6b7c\u706d\u6218\u201d\uff0c\u793e\u4f1a\u666e\u904d\u8ba4\u4e3a\uff0c\u5728\u6d88\u9664\u201c\u4fdd\u62a4\u4f1e\u201d\u7684\u57fa\u7840\u4e0a\uff0c\u5982\u4f55\u907f\u514d\u201c\u8fd0\u52a8\u5f0f\u6574\u6cbb\u201d\u5b58\u5728\u7684\u201c\u4e00\u9635\u98ce\u6548\u5e94\u201d\u3001\u5efa\u7acb\u9632\u6cbb\u6d89\u9ec4\u95ee\u9898\u53cd\u5f39\u7684\u957f\u6548\u673a\u5236\uff0c\u66f4\u503c\u5f97\u5173\u6ce8\u3002\u4e1c\u839e\u5e02\u516c\u5b89\u90e8\u95e8\u900f\u9732\uff0c\u8be5\u5e02\u4e13\u95e8\u8d1f\u8d23\u6253\u51fb\u201c\u9ec4\u8d4c\u201d\u8fdd\u6cd5\u72af\u7f6a\u7684\u884c\u52a8\u5927\u961f\u7f16\u5236\u4ec5\u670915\u4eba\uff0c\u65e0\u6cd5\u7ecf\u5e38\u6027\u5730\u76f4\u63a5\u5b9e\u65bd\u67e5\u5904\u884c\u52a8\uff0c\u53ea\u80fd\u7763\u5bfc\u5404\u5206\u5c40\u5f00\u5c55\u65e5\u5e38\u6253\u51fb\u548c\u5b9a\u671f\u7ec4\u7ec7\u5f00\u5c55\u4e13\u9879\u884c\u52a8\u3002\u800c\u4ece\u6848\u4ef6\u67e5\u5904\u8fc7\u7a0b\u770b\uff0c\u6d89\u9ec4\u6848\u4ef6\u53c8\u5b58\u5728\u53d6\u8bc1\u96be\u3001\u5904\u7406\u96be\u7b49\u95ee\u9898\uff0c\u8bc1\u636e\u9501\u94fe\u5f80\u5f80\u5bb9\u6613\u65ad\u88c2\uff0c\u96be\u4ee5\u6307\u5411\u573a\u6240\u7684\u5e55\u540e\u8001\u677f\uff0c\u8fd9\u4e9b\u90fd\u4f7f\u5f97\u6253\u51fb\u6d89\u9ec4\u884c\u52a8\u53ea\u80fd\u662f\u201c\u6253\u4e3a\u6cbb\u6807\u3001\u7ba1\u65b9\u80fd\u6cbb\u672c\u201d\uff0c\u5fc5\u987b\u5efa\u7acb\u6709\u9488\u5bf9\u6027\u7684\u957f\u6548\u673a\u5236\u3002\u5bf9\u6b64\uff0c\u5e7f\u4e1c\u7701\u526f\u7701\u957f\u3001\u516c\u5b89\u5385\u5385\u957f\u674e\u6625\u751f\u8868\u793a\uff0c\u5e7f\u4e1c\u8981\u5728\u67e5\u5904\u6d89\u9ec4\u95ee\u9898\u4e0a\u575a\u6301\u7efc\u5408\u6cbb\u7406\uff0c\u5728\u515a\u59d4\u3001\u653f\u5e9c\u7684\u7edf\u4e00\u9886\u5bfc\u4e0b\u5efa\u7acb\u5a31\u4e50\u670d\u52a1\u573a\u6240\u957f\u6548\u7ba1\u7406\u673a\u5236\u3002>\u5e7f\u4e1c\u7701\u516c\u5b89\u538512\u65e5\u53d1\u5e03\u6d88\u606f\u79f0\uff0c\u8be5\u7701\u5404\u5730\u8b66\u65b9\u4ece10\u65e5\u5c55\u5f00\u5a31\u4e50\u573a\u6240\u6d89\u9ec4\u95ee\u9898\u4e13\u9879\u6574\u6cbb\u884c\u52a8\uff0c\u622a\u81f312\u65e513\u65f6\uff0c\u5171\u6e05\u67e5\u5404\u7c7b\u5a31\u4e50\u670d\u52a1\u573a\u624018372\u95f4\u6b21\uff0c\u6293\u83b7\u6d89\u9ec4\u8fdd\u6cd5\u5acc\u7591\u4eba\u5458920\u4eba\uff0c\u5211\u62d8121\u4eba\u3001\u884c\u653f\u62d8\u7559364\u4eba\uff0c\u505c\u4e1a\u6574\u987f\u6b4c\u821e\u5a31\u4e50\u573a\u624038\u95f4\u3002\u636e\u4ecb\u7ecd\uff0c2\u670810\u65e5\u5e7f\u4e1c\u7701\u516c\u5b89\u5385\u4e3e\u884c\u7535\u89c6\u7535\u8bdd\u4f1a\u8bae\u4f5c\u51fa\u90e8\u7f72\u540e\uff0c\u5404\u5730\u8b66\u65b9\u8fc5\u901f\u6210\u7acb\u7531\u4e3b\u8981\u9886\u5bfc\u4efb\u7ec4\u957f\u7684\u9886\u5bfc\u5c0f\u7ec4\uff0c\u53ec\u5f00\u4f1a\u8bae\u90e8\u7f72\u843d\u5b9e\uff0c\u5e76\u7ed3\u5408\u672c\u5730\u5b9e\u9645\uff0c\u5236\u5b9a\u5de5\u4f5c\u65b9\u6848\uff0c\u8fc5\u901f\u7ec4\u7ec7\u5f00\u5c55\u5a31\u4e50\u573a\u6240\u6d89\u9ec4\u95ee\u9898\u4e13\u9879\u6574\u6cbb\u884c\u52a8\u3002\n\u622a\u81f312\u65e513\u65f6\uff0c\u5168\u7701\u8b66\u65b9\u5171\u6e05\u67e5\u5404\u7c7b\u5a31\u4e50\u670d\u52a1\u573a\u624018372\u95f4\u6b21\uff0c\u5176\u4e2d\u6b4c\u821e\u5a31\u4e50\u573a\u62403592\u95f4\u6b21\uff0c\u6851\u62ff\u6309\u6469\u573a\u62404201\u95f4\u6b21\u3002\u5171\u67e5\u5904\u6d89\u9ec4\u573a\u6240187\u95f4\uff0c\u6293\u83b7\u6d89\u9ec4\u8fdd\u6cd5\u5acc\u7591\u4eba\u5458920\u4eba\uff0c\u5211\u62d8121\u4eba\u3001\u884c\u653f\u62d8\u7559364\u4eba\uff0c\u505c\u4e1a\u6574\u987f\u6b4c\u821e\u5a31\u4e50\u573a\u624038\u95f4\uff0c\u6851\u62ff\u6309\u6469\u573a\u6240156\u95f4\u3002\u53e6\u6089\uff0c\u4e1c\u839e\u5e02\u516c\u5b89\u5c40\u5728\u516c\u5b89\u90e8\u7763\u5bfc\u7ec4\u548c\u5e7f\u4e1c\u7701\u516c\u5b89\u5385\u5de5\u4f5c\u7ec4\u7684\u6307\u5bfc\u4e0b\uff0c\u5728\u7ee7\u7eed\u5f00\u5c55\u6e05\u67e5\u7684\u540c\u65f6\uff0c\u5145\u5b9e\u529e\u6848\u529b\u91cf\uff0c\u52a0\u5927\u5bf9\u592e\u89c6\u66dd\u5149\u768411\u95f4\u6d89\u9ec4\u5a31\u4e50\u573a\u6240\u7684\u67e5\u5904\u4fa6\u529e\u529b\u5ea6\uff0c\u7ee7\u7eed\u6df1\u5165\u63a8\u8fdb\u6848\u4ef6\u4fa6\u529e\u548c\u6e05\u67e5\u6574\u6cbb\u5de5\u4f5c\u3002\u622a\u81f32\u670812\u65e513\u65f6\uff0c\u5171\u6293\u83b7\u592e\u89c6\u66dd\u5149\u7684\u6d89\u9ec4\u5a31\u4e50\u573a\u6240\u6d89\u6848\u4eba\u5458144\u540d\u3002\u76ee\u524d\uff0c\u4ecd\u5728\u8ffd\u900351\u4eba\u3002\u4e3a\u63a8\u52a8\u5e7f\u4e1c\u6253\u51fb\u6574\u6cbb\u5de5\u4f5c\u624e\u5b9e\u6709\u6548\u5f00\u5c55\uff0c\u8be5\u7701\u516c\u5b89\u5385\u51b3\u5b9a\uff0c\u5404\u4f4d\u5385\u8d1f\u8d23\u4eba\u5206\u7247\u5305\u5e72\u7763\u5bfc\u5404\u5730\u4e13\u9879\u884c\u52a8\uff0c\u6302\u70b9\u7763\u5bfc\u5b9e\u884c\u8d23\u4efb\u6346\u7ed1\uff0c\u4e00\u6293\u5230\u5e95\uff0c\u5e76\u8868\u793a\u201c\u4e0d\u8fbe\u76ee\u7684\uff0c\u7edd\u4e0d\u6536\u5175\u3002\u201d\u636e\u300a\u6df1\u5733\u5546\u62a5\u300b\u949f\u6b23\u65b0\u534e\u793e\u62a5\u9053\u8ddf\u8d34\u70ed\u8bcd\uff1a \n            \u7f51\u53cb\u8bc4\u8bba\u4ec5\u4f9b\u5176\u8868\u8fbe\u4e2a\u4eba\u770b\u6cd5\uff0c\u5e76\u4e0d\u8868\u660e\u7f51\u6613\u7acb\u573a\u3002", "link": "http://news.163.com/14/0213/01/9KU840I300014AED.html", "title": "\u4e1c\u839e\uff1a\u9547\u59d4\u4e66\u8bb0\u6d3e\u51fa\u6240\u957f\u626b\u9ec4\u4e0d\u529b\u4e00\u5f8b\u5148\u514d\u804c"}}